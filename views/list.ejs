<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(function(itemsinDb){%>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" value="<%=itemsinDb._id%>"name="checkbox"onchange="this.form.submit()">
        <p><%=itemsinDb.name%></p>
        </div>
        <input type="hidden" name="listName" value="<%=listTitle%>"></input>
    </form>
  
    <%})%>

    <form class="item" action="/" method="post">
      <input
        type="text"
        name="newItem"
        placeholder="New Item"
        autocomplete="off"
      />
      <button type="submit"value="<%=listTitle%>" name="list">+</button>
    </form>
  </div>

  <%- include("footer") -%>
</div>
